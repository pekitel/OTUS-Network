conf t
hostname R18
no ip domain-lookup
ipv6 unicast-routing
ip dhcp pool VPC8
 network 20.200.10.0 255.255.255.0
 default-router 20.200.10.1 
 dns-server 8.8.8.8 
ip dhcp pool VPC
 network 20.200.20.0 255.255.255.0
 default-router 20.200.20.1 
 dns-server 8.8.8.8  
 exit
ipv6 dhcp pool VPC8
 address prefix 2002:ABCD:DB8:10::1/64
 dns-server 2A02:6B8::FEED:FF
 domain-name SPB.ru
 exit
ipv6 dhcp pool VPC
 address prefix 2002:ABCD:DB8:20::1/64
 dns-server 2A02:6B8::FEED:FF
 domain-name SPB.ru
 exit
ip dhcp excluded-address 20.200.10.1
ip dhcp excluded-address 20.200.20.1 
interface Loopback18
 ip address 2.2.2.18 255.255.255.255
 ipv6 address FE80:BB::18 link-local
 ipv6 enable
 exit
